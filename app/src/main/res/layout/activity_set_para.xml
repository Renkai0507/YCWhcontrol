<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvPHPTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHP Server 參數"
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvPHPIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主機 IP : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtPort"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvPhpPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="傳輸 PORT:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtURL"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txvWSTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Web Service 參數"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvWsUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="URL:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:nextFocusDown="@+id/edtNameSpace"
                android:singleLine="true"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvWsNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMESPACE:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNameSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:nextFocusDown="@+id/edtPass"
                android:singleLine="true"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/txvPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.07"
                android:text="設定密碼: "
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtVolume"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txvVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音量: "
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edtVolume"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0-100"
                android:inputType="text"
                android:maxLength="3"
                android:nextFocusDown="@+id/edtOraTNS"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvOraTNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TNS: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtOraTNS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtDep_ID"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txvDep_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="製部C: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtDep_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtMac_ID"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvMac_ID"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="機碼 : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtMac_ID"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtHouseC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txvHouseC"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="WH : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtHouseC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:nextFocusDown="@+id/edtBT"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/txvBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.67"
                android:text="BT: "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="輸入藍芽印機名稱或MAC"
                android:inputType="text"
                android:nextFocusDown="@+id/edtIP"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/read"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Save"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ClearLayout"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSetPara_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/setpara_1"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
